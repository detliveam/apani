<?php
include "koneksi.php";


if (isset($_POST['simpan'])) {
    $nama  = $_POST['nama'];
    $alamat = $_POST['alamat'];
    $telp = $_POST['telp'];
    $paket = $_POST['paket'];
    $berat = $_POST['berat'];
    $jenis = $_POST['jenis'];
    $harga = $_POST['harga'];
    $id    = $_POST['id'];

    if ($id == "") {
      
        mysqli_query($conn, "INSERT INTO transaksi (nama, alamat, telp,paket,berat,jenis,harga) VALUES ('$nama','$alamat','$telp','$paket','$berat','$jenis','$harga')");
    } else {
        mysqli_query($conn, "UPDATE transaksi SET nama='$nama',alamat='$alamat',telp='$telp',paket='$paket',berat='$berat',jenis='$jenis',harga='$harga' WHERE id='$id'");
    }
    header("location: transaksi.php");
    exit;
}       

if (isset($_GET['hapus'])) {
    $id = $_GET['hapus'];
    mysqli_query($conn, "DELETE FROM transaksi WHERE id ='$id'");
    header("location: transaksi.php");
    exit;
}


$edit = false;
$id = "";
$nama = "";
$alamat = "";
$telp = "";
$paket = "";
$berat = "";
$jenis = '';
$harga = "";


if (isset($_GET['edit'])) {
    $edit = true;
    $id = $_GET['edit'];

    $data = mysqli_query(
        $conn,
        "SELECT * FROM transaksi WHERE id='$id'"
    );

    $d = mysqli_fetch_array($data);

    if ($d) {
        $nama = $d['nama'];
        $alamat = $d['alamat'];
        $telp = $d['telp'];
        $paket = $d['paket'];
        $berat = $d['berat'];
        $jenis = $d['jenis'];
        $harga = $d['harga'];

    } else {
     
        header("location: transaksi.php");
        exit;
    }
}
?>


