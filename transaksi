                <th>Harga</th>
            <th>Aksi</th>
        </tr>

        <?php
        $no = 1;
        $data = mysqli_query($conn,"SELECT * FROM transaksi");
        while ($d = mysqli_fetch_array($data)) {
        ?>
        <tr>
            <td><?= $no++ ?></td>
            <td><?= $d['nama'] ?></td>
            <td><?= $d['alamat'] ?></td>
            <td><?= $d['telp'] ?></td>
             <td><?= $d['paket'] ?> </td>
              <td><?= $d['berat'] ?> KG</td>
               <td><?= $d['jenis'] ?></td>
                <td><?= $d['harga'] ?></td>

            <td>
                <a href="transaksi.php?edit=<?= $d['id'] ?>">Edit</a> 
                <a href="transaksi.php?hapus=<?= $d['id'] ?>" onclick="return confirm('Yakin hapus data?')">Hapus</a>
            </td>
        </tr>
        <?php } ?>
    </table>
