        <input type="hidden" name="id" value="<?= $id ?>">

        <label>Nama Pelanggan</label>
        <input type="text" name="nama" value="<?= $nama?>" required>

        <label>Alamat Pelanggan</label>
        <input type="text" name="alamat" value="<?= $alamat ?>" required>

        <label>Kontak Pelanggan</label>
        <input type="number" name="telp" value="<?= $telp ?>" required>

         <label>Nama Paket</label>
        <input type="text" name="paket" value="<?= $paket ?>" required>

         <label>Berat (KG)</label>
        <input type="number" name="berat" value="<?= $berat ?>" required>

         <label>Jenis Paket</label>
        <select name="jenis" required>
            <option value=""> Pilih Jenis </option>
            <option value="Hemat" <?= $jenis=="Hemat"?"selected":"" ?>>Hemat</option>
            <option value="Reguler" <?= $jenis=="Reguler"?"selected":"" ?>>Reguler</option>
        </select>

        
        <label>Harga</label>
        <input type="number" name="harga" value="<?= $harga ?>" required>


        <button type="submit" name="simpan"><?= $edit ? "Update" : "Simpan" ?>
        </button>

        <?php if ($edit) { ?>
            <a href="transaksi.php">Batal</a>
        <?php } ?>
    </form>

    <h2>Data Transaksi</h2>

   
    <table border="1" cellpadding="8" cellspacing="0">
